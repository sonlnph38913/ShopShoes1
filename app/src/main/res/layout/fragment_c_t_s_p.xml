<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentUser.CTSPFragment">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f6f6f6">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/avatar1"
                android:layout_gravity="center"
                android:id="@+id/imgGiayCt"
                />


            <TextView
                android:id="@+id/txtTenGiayCt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AF1"
                android:textSize="18dp"
                android:textStyle="italic"
                android:textColor="#ff00"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/txtGiaBanCt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: 200$"
                android:textSize="18dp"
                android:textColor="#0000FF"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"

                />
            <TextView
                android:id="@+id/txtSizeCt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size: 40"
                android:textSize="18dp"
                android:textColor="#0000FF"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Air Force 1 Louis Vuitton – thiết kế đắt giá và có nhiều sức hút nhất năm. Ra mắt trong bộ sưu tập Xuân – Hè 2022, bộ sưu tập đắt đỏ Air Force 1 Louis Vuitton được coi là món quà mừng sinh nhật 40 năm của dòng giày Nike Air Force 1. Bên cạnh sự chế tác vô cùng tỉ mỉ từng đường khâu mũi chỉ, đôi iconic sneaker này còn khoác lên mình những chất liệu cao cấp và biểu tượng sang trọng đến từ nhà Louis Vuitton. "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_margin="5dp"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            >
            <Button
                android:id="@+id/addGioHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm Vào Giỏ Hàng"
                android:background="@drawable/custom_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Đặt Hàng Ngay"
                android:background="@drawable/custom_button"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>